# Environment Configuration
# Copy this file to .env and fill in your values

# Django Settings
DEBUG=False
DJANGO_SECRET_KEY=generate-a-very-long-random-string-at-least-50-characters-here
JWT_SECRET_KEY=generate-another-very-long-random-string-for-jwt-tokens

# Database
DB_NAME=secure_chat
DB_USER=chat_user
DB_PASSWORD=your-very-secure-database-password-here
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=your-secure-redis-password-here

# Room Encryption
ROOM_KEY_PASSWORD=master-key-for-encrypting-room-keys-change-this

# Domain (for production)
DOMAIN=your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=http://localhost:8000,https://your-domain.com
